export type LoadingMode = 'circular' | 'snow' | 'semicircle' | 'circle'
export type LoadingTimingFunction = 'ease' | 'ease-in' | 'ease-out' | 'ease-in-out' | 'linear'

export type LoadingProps = {
	mode ?: LoadingMode,
	duration ?: number,
	color ?: string,
	inactiveColor ?: string,
	size ?: string | number,
	text ?: string | number,
	textColor ?: string,
	textSize ?: string | number,
	vertical ?: boolean,
	timingFunction ?: LoadingTimingFunction,
	customStyle ?: UTSJSONObject
}